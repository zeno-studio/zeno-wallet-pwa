	width: 2.4rem;
	cursor: pointer;

	&:hover {
		transform: scale(1.1);
		color: var(--color);
	}
}


.icon28-footer {
	height: 2.8rem;
	width: 2.8rem;
	cursor: pointer;

	&:hover {
		transform: scale(1.1);
		color: var(--primary);
	}
	&:active {
		transform: scale(1.1);
		color: var(--primary);
	}
}

.icon3{
	height: 3rem;
	width: 3rem;
	color: var(--text);
	cursor: pointer;
}

.icon3Y{
	height: 3rem;
	width: 3rem;
	color: var(--accent-yellow);
	cursor: pointer;
}

.img24 {
	width: 2.4rem;
	height: 2.4rem;
	padding: 0px;
	margin-right: 1rem;
}

.title {
		display: flex;
		font-size: 2rem;
		font-weight: 700;
		color: var(--text);
		margin-bottom: 3rem;
}

.label-s {
	display: flex;
	justify-content: flex-start;
	font-size: 1.4rem;
	font-weight: 500;

}

.label-m {
	display: flex;
	justify-content: flex-start;
	font-size: 1.6rem;
	font-weight: 500;

}

.label-l {
	display: flex;
	justify-content: flex-start;
	font-size: 1.8rem;
	font-weight: 500;

}

.label-xl {
	display: flex;
	justify-content: flex-start;
	font-size: 2rem;
	font-weight: 500;

}

.toast {
	display: flex;
	position: fixed;
	z-index: 100;
	right: 2rem;
	bottom: 7rem;
	padding: 0.5rem;
	flex-direction: row;
	justify-content: center;
	border-radius: 1rem;
	border-width: 1px;
	height: 4rem;
	background-color: var(--color-blossom1);
}



.close {
	position: absolute;
	display: flex;
	align-items: center;
	justify-content: center;
	right: 0;
	border: none;
	background: none;
	margin: 0;
	padding: 0;

}

.backdrop {
	position: fixed;
	top: 0;
	left: 0;
	width: 100vw;
	height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: rgba(0, 0, 0, 0.25);
	backdrop-filter: blur( 1rem );
	z-index: 1000;
}


.label-top {
	position: relative;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 1.6rem;
	font-weight: 600;
	background: none;
	height: 5rem;
	padding: 1rem 2rem;
	border-radius: 1.6rem;
	width: 100%;
	box-sizing: border-box;
	color: var(--text);
	border: none;



}
.arrowBack {
	position: absolute;
	left: 1rem;
	border: none;
	background: none;	
}

.input-password {
		padding: 1.5rem 2rem;
		font-size: 1.6rem;
		width: 80%;
		border-radius: 2rem;
		background: var(--bg1);
		border: 2px solid var(--bg3);
		color: var(--text);
		&:focus {
			outline: none;
			border: 2px solid var(--accent-blue);
			color: var(--color);
		}
		&:active {
			outline: none;
			border: 2px solid var(--accent-blue);
			color: var(--color);
		}
	}

.scan-focus {
	height: 20rem;
	width: 20rem;
	color: var(--color);
	cursor: pointer;
	animation: focus 1s infinite;
}

.empty-btn{
	background: none;
	border: none;
	cursor: pointer;
}


@keyframes focus {
	0%   {transform: scale(1);}
	50%  {transform: scale(1.05);}
	100% {transform: scale(1);}
  }

