:root {
	--font-size-base: 1.8rem;
	--font-family-base: Basel, -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
	--polkadot: #FF2670;
	--primary: #1d9bf0;
	--secondary:rgb(249, 71, 133);
	/* --secondary: #F0991D; */
	--success: #52CC93;	
	--critical: #F01E1D;	

	--accent-yellow:rgba(255, 182, 72, 1);
	--accent-yellow-back:rgba(241, 186, 0, 0.1);
	--accent-cyan:rgba(18, 205, 217, 1);
	--accent-cyan-back:rgba(18, 205, 217, 0.1);
	--accent-green:rgba(34, 176, 125, 1);
	--accent-green-back:rgba(34, 176, 125, 0.1);
	--accent-purple:rgba(181, 72, 198, 1);
	--accent-purple-back:rgba(181, 72, 198, 0.1);
	--accent-blue:rgba(50, 167, 226, 1);
	--accent-blue-back:rgba(50, 167, 226, 0.1);
	--accent-pink:rgba(253, 86, 141, 1);
	--accent-pink-back:rgba(253, 86, 141, 0.1);
	--accent-orange:rgba(255, 135, 0, 1);
	--accent-orange-back:rgba(255, 135, 0, 0.1);

}

[data-theme="light"] {
	--border: #d2d2d2;
	--shadow: rgba(255, 255, 255, 0.2);
	--bg: #f3f5f8;
	--bg1: #fff;
	--bg2: #f2f2f2;
	--bg3: #eeeeee;
	--bg4: #dedede;
	--text: #696969;
	--color: #131313;
}

[data-theme="dark"] {
	--border: #404040;
	--shadow: rgba(13, 13, 13, 0.5);
	--bg: #131313;
	--bg1: #1e1e1e;
	--bg2: #252525;
	--bg3: #333333;
	--bg4: #404040;
	--text: #adadad;
	--color: #fff;
}

@view-transition {
  navigation: auto;
}



/* Body */
html {
	font-size: 62.5%;
	font-family: var(--font-family-base);
}

body {
	font-size: var(--font-size-base);
	line-height: 1.618;
	color: var(--text);
	background-color: var(--bg);
}

html, body {
    overscroll-behavior-y: contain; 
    height: 100%;
    margin: 0;
}

body::-webkit-scrollbar {
	display: none;
}


a,
button,
div,
input,
select,
textarea,
span {
	font-family: var(--font-family-base);
}


a {
	display: flex;
	color: var(--text);
	text-decoration: none;
	align-items: center;
}

a:hover {
	color: var(--color);
}

.avatar {
	border-radius: 100%;
	height: 2.5rem;
	width: 2.5rem;
}

h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
ol,
li {
	color: var(--text);
	margin: 0px;
	padding: 0px;
}

ul {
	padding-left: 1.4em;
	margin-top: 0px;
	margin-bottom: 2.5rem;
}

li {
	margin-bottom: 0.4em;
}



table {
	text-align: justify;
	width: 100%;
	border-collapse: collapse;
	margin-bottom: 2rem;

}

td,
th {
	padding: 0.5em;

}



textarea,
input {
	display: block;
	box-sizing: border-box;
	color: var(--text);
	padding: 1rem;
	margin: 0px;

	&:focus {
		color: var(--color);
		outline: 0
	}

	&:hover {
		color: var(--color);
	}

}


div {
	display: flex;
	justify-content: center;
	align-items: center;
}

.icon16 {
	height: 1.6rem;
	width: 1.6rem;
	color: var(--text);
	cursor: pointer;
}


